@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="~/css/signin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-...insert hash here..." crossorigin="anonymous" />
</head>
<body>
    <style>
        .loading-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .loading-wrapper {
            display: flex;
            flex-direction: column;
            align-item: center;
            margin-top: -80px;
        }

            .loading-wrapper img {
                width: 200px;
                height: 200px;
                margin-bottom: 10px;
            }

            span{
                color: red;
            }
    </style>
    <div class="loading-container">
        <div class="loading-wrapper">
            <img src="~/loading.gif" />
            <i style="margin: -30px;">Please wait while we setting up for you. . .</i>
        </div>
    </div>

    <div class="container">
        <section class="vh-100">
            <div class="container-fluid h-custom formBox">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                            <p class="lead fw-normal mb-0 me-3">Sign up with</p>
                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-linkedin-in"></i>
                            </button>
                        </div>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Or</p>
                        </div>

                        <!-- Full Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="txtFullName" class="form-control"
                                   placeholder="Enter a valid Full Name" />
                            <label class="form-label" for="form3Example3">Full Name<span>*</span></label>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="txtEmail" class="form-control"
                                   placeholder="Enter a valid Email Address" />
                            <label class="form-label" for="form3Example3">Email<span>*</span></label>
                        </div>

                        <!-- Username input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="txtEmail" class="form-control"
                                   placeholder="Enter a Username" />
                            <label class="form-label" for="form3Example3">Username<span>*</span></label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <input type="password" id="txtPassword" class="form-control"
                                   placeholder="Enter password" />
                            <label class="form-label" for="form3Example4">Password<span>*</span></label>
                        </div>
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="button" class="btn btn-primary"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;" onclick="btnRegister()">
                                Register
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Already have an account? <a href="/Home/Signin"
                                                            class="link-danger">Signin</a>
                            </p>

                        </div>
                    </div>
                    
                    <div class="col-md-9 col-lg-6 col-xl-5">

                        <img src="~/thurstonimage.png" />
                    </div>
                    
                </div>
            </div>
        </section>
    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.3/dist/sweetalert2.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.3/dist/sweetalert2.min.js"></script>

    <script>
        window.addEventListener('load', ()=>{
            document.querySelector('.loading-container').style.display='none';
        })

        let btnRegister = ()=>{
            let url = '/Home/SignUp';
            let fullName = $('#txtFullName').val();
            let email = $('#txtEmail').val();
            let userName = $('#txtUsername').val();
            let password = $('#txtPassword').val();

            $.ajax({
                url: url,
                data: {FullName: fullName, Email: email, Username: userName, Password: password},
                type: 'post',
                success: (e)=>{
                    if(e.check == true){
                        Swal.fire("Success","New User Successfully Save!","success").then(()=>{
                            window.location.href='/Home/Signin';
                        });
                    }else{
                        Swal.fire("Warning","Please complete the fillup form!","warning");
                    }
                }
            })
        }
    </script>
</body>
</html>